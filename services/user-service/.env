# ==============================================
# USER SERVICE - Environment Configuration  
# ==============================================

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ==============================================
# SERVICE IDENTITY
# ==============================================
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
SERVICE_INSTANCE_ID=user-service-001

# ==============================================
# RABBITMQ CONFIGURATION
# ==============================================
RABBITMQ_URL=amqp://obs_user:obs_password@obs_rabbitmq:5672/
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=logs.topic
RABBITMQ_CONNECTION_TIMEOUT=30000
RABBITMQ_HEARTBEAT=60
RABBITMQ_MAX_RETRIES=5
RABBITMQ_RETRY_DELAY=2000



# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_MAX_FILE_SIZE=20m
LOG_MAX_FILES=14d
LOG_DATE_PATTERN=YYYY-MM-DD

# ==============================================
# METRICS CONFIGURATION
# ==============================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ==============================================
# CIRCUIT BREAKER
# ==============================================
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# ==============================================
# PERFORMANCE TUNING
# ==============================================
MAX_CONCURRENT_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=10000
REQUEST_TIMEOUT=30000

# ==============================================
# MULTI-TENANT SUPPORT
# ==============================================
TENANT_HEADER_NAME=x-tenant-id
DEFAULT_TENANT_ID=default

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_BATCH_PROCESSING=true
FEATURE_COMPRESSION=true
FEATURE_CORRELATION_ID_GENERATION=true
