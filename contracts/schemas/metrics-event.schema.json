{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://observability-hub.com/schemas/metrics-event.schema.json",
  "title": "Metrics Event Schema",
  "description": "Schema for metrics events in the observability system",
  "allOf": [
    {
      "$ref": "base-event.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "eventType": {
          "type": "string",
          "pattern": "^metrics\\.(counter|gauge|histogram|summary)\\.(created|updated)$"
        },
        "data": {
          "type": "object",
          "required": ["name", "type", "value", "unit", "timestamp"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-zA-Z][a-zA-Z0-9._]*$",
              "minLength": 1,
              "maxLength": 255,
              "description": "Metric name following prometheus naming conventions"
            },
            "type": {
              "type": "string",
              "enum": ["counter", "gauge", "histogram", "summary", "timer"],
              "description": "Type of metric"
            },
            "value": {
              "oneOf": [
                {"type": "number"},
                {
                  "type": "object",
                  "properties": {
                    "sum": {"type": "number"},
                    "count": {"type": "integer", "minimum": 0},
                    "min": {"type": "number"},
                    "max": {"type": "number"},
                    "avg": {"type": "number"},
                    "percentiles": {
                      "type": "object",
                      "properties": {
                        "p50": {"type": "number"},
                        "p90": {"type": "number"},
                        "p95": {"type": "number"},
                        "p99": {"type": "number"}
                      }
                    }
                  }
                }
              ],
              "description": "Metric value - can be simple number or complex aggregation"
            },
            "unit": {
              "type": "string",
              "enum": [
                "bytes", "seconds", "milliseconds", "microseconds", "nanoseconds",
                "percent", "ratio", "count", "requests", "errors", "operations"
              ],
              "description": "Unit of measurement"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "When the metric was collected"
            },
            "dimensions": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "description": "Metric dimensions/labels for grouping and filtering"
            },
            "buckets": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["upperBound", "count"],
                "properties": {
                  "upperBound": {
                    "type": "number",
                    "description": "Upper bound of the bucket"
                  },
                  "count": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Number of observations in this bucket"
                  }
                }
              },
              "description": "Histogram buckets (for histogram metrics)"
            },
            "exemplars": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["value", "timestamp"],
                "properties": {
                  "value": {
                    "type": "number",
                    "description": "Exemplar value"
                  },
                  "timestamp": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "traceId": {
                    "type": "string",
                    "pattern": "^[a-f0-9]{32}$|^[a-f0-9]{16}$"
                  },
                  "spanId": {
                    "type": "string",
                    "pattern": "^[a-f0-9]{16}$"
                  },
                  "labels": {
                    "type": "object",
                    "additionalProperties": {"type": "string"}
                  }
                }
              },
              "description": "Exemplars linking metrics to traces"
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
} 