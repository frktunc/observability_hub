{
  "name": "@observability-hub/event-contracts",
  "version": "1.0.0",
  "description": "TypeScript types and validators for observability events",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run prebuild && tsc",
    "prebuild": "npm run generate:types",
    "generate:types": "mkdir -p src/generated && npx json-schema-to-typescript ../contracts/schemas/base-event.schema.json > src/generated/base-event.types.ts && npx json-schema-to-typescript ../contracts/schemas/log-event.schema.json > src/generated/log-event.types.ts && npx json-schema-to-typescript ../contracts/schemas/metrics-event.schema.json > src/generated/metrics-event.types.ts && npx json-schema-to-typescript ../contracts/schemas/trace-event.schema.json > src/generated/trace-event.types.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "node quick-test.js",
    "test:contracts": "jest --testPathPattern=contracts",
    "test:migration": "jest --testPathPattern=migration",
    "test:grpc": "jest --testPathPattern=grpc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "observability",
    "events",
    "logging",
    "tracing",
    "metrics",
    "typescript",
    "validation"
  ],
  "author": "Observability Hub Team",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-addons": "^1.0.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/observability-hub/event-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/observability-hub/event-contracts/issues"
  },
  "homepage": "https://github.com/observability-hub/event-contracts#readme"
} 